<li>
  <%= gravatar_for user %>
  <%= link_to user.first_name, user %> <%= link_to user.last_name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "Are you sure you want to delete this user?" } %>
  <% end %>
</li>